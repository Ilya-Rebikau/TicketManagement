{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLEXPRESS;Database=TicketManagement;Trusted_Connection=True;"
  },
  "UsersApiAddress": "https://localhost:5001",
  "EventManagerApiAddress": "https://localhost:5002",
  "VenueManagerApiAddress": "https://localhost:5003",
  "PurchaseFlowApiAddress": "https://localhost:5004",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "Logs/TicketManagement.Web.Logs.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
