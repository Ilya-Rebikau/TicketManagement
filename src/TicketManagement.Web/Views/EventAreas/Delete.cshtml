@model EventAreaViewModel
@inject IViewLocalizer loc
@{
    ViewData["Title"] = @loc["Title"];
}

<h1>@loc["Title"]</h1>

<h3>@loc["Sure"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoordX)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoordX)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoordY)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CoordY)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@loc["Delete"]" class="btn btn-danger" />
    </form>
    <hr />
    <a class="btn btn-primary" asp-action="Index">@loc["Back"]</a>
</div>
