@model EditUserViewModel
@{
    ViewBag.Title = "Edit user";
}
<h1>Edit</h1>
<h4>User</h4>
<hr />
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
        <div class="form-group">
        <label asp-for="Surname" class="control-label"></label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input type="number" asp-for="Balance" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TimeZone" class="control-label"></label>
        <select asp-for="TimeZone" asp-items="@Model.TimeZones" class="form-control" ></select>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
    <hr />
    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
</form>