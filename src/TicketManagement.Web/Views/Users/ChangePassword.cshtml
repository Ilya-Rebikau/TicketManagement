@model ChangePasswordViewModel
@inject IViewLocalizer loc
@{
    ViewData["Title"] = @loc["Title"];
}
<h2>@loc["ChangePasswordForUser"] @Model.Email</h2>
<hr />
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="@loc["Save"]" class="btn btn-success" />
    </div>
</form>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">@loc["Back"]</a>
</div>